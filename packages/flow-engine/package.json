{
  "name": "@tsflow/flow-engine",
  "version": "1.0.0",
  "description": "Enterprise TypeScript workflow engine with state machines, parallel execution, saga patterns, and YAML DSL",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "vite build && tsc --emitDeclarationOnly --declaration --outDir dist",
    "dev": "vite build --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "lint": "tsc --noEmit",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run build && npm test"
  },
  "keywords": [
    "workflow",
    "state-machine",
    "workflow-engine",
    "saga-pattern",
    "typescript",
    "parallel-execution",
    "yaml",
    "orchestration",
    "distributed-transactions",
    "compensation",
    "idempotency",
    "middleware"
  ],
  "author": "Your Name <your.email@example.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/tsFlow.git",
    "directory": "packages/flow-engine"
  },
  "bugs": {
    "url": "https://github.com/yourusername/tsFlow/issues"
  },
  "homepage": "https://github.com/yourusername/tsFlow#readme",
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "yaml": "^2.6.1"
  },
  "devDependencies": {
    "@types/node": "^22.9.3",
    "@vitest/ui": "^2.1.8",
    "typescript": "^5.6.3",
    "vite": "^6.0.1",
    "vitest": "^2.1.8",
    "@vitest/coverage-v8": "^2.1.8"
  }
}
